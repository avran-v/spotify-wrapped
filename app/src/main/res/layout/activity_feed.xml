<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeedActivity">



        <LinearLayout
            android:id="@+id/feed_and_lc_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Search bar -->
            <Button
                android:id="@+id/feed_button"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="@string/feed_Button"
                android:textSize="16sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/followed_button"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="@string/followed"
                android:textSize="16sp"
                app:cornerRadius="0dp" />

            <!-- Add friends button -->
            <!--            <ImageButton-->
            <!--                android:id="@+id/addFriendsButton"-->
            <!--                android:layout_width="50dp"-->
            <!--                android:layout_height="50dp"-->
            <!--                android:src="@drawable/friends"-->
            <!--                android:scaleType="fitCenter"-->
            <!--                android:padding="8dp"-->
            <!--                android:contentDescription="@string/friends_add"-->
            <!--                android:background="@null"/>-->

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/navigation_buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feed_and_lc_buttons">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#6C4CAC">

            <androidx.cardview.widget.CardView
                android:id="@+id/user_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:text="@string/persons_username"
                            android:textSize="18sp"
                            android:background="@color/darker_grey"/>

                        <Button
                            android:id="@+id/follow_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/follow"
                            android:textSize="18sp"
                            app:cornerRadius="0dp" />


                    </LinearLayout>

                    <!-- Search bar -->


                    <ImageView
                        android:layout_marginTop="4dp"
                        android:id="@+id/top_artist_pic"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/user"
                        android:scaleType="fitCenter"
                        android:layout_marginStart="140dp"
                        android:contentDescription="@string/the_user_s_top_artist"/>

                    <!--                    the three dots thing-->
                    <!--                    <ImageButton-->
                    <!--                        android:-->
                    <!--                        android:layout_width="50dp"-->
                    <!--                        android:layout_height="50dp"-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/artists_summary"
                            android:layout_width="185dp"
                            android:layout_height="50dp"
                            android:text="@string/top_artists"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tracks_summary"
                            android:layout_width="185dp"
                            android:layout_height="50dp"
                            android:text="@string/top_tracks"
                            android:textSize="16sp"/>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/top_genre"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="@string/top_genre"
                        android:textSize="16sp"/>



                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/navigation_buttons"
        android:backgroundTint="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/light_green"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/wrapped_btn"
            android:layout_width="125dp"
            android:layout_height="48dp"
            android:src="@drawable/home"
            android:scaleType="fitCenter"
            android:contentDescription="@string/home_description"/>

        <ImageButton
            android:id="@+id/feed_btn"
            android:layout_width="125dp"
            android:layout_height="48dp"
            android:src="@drawable/feed"
            android:scaleType="fitCenter"
            android:contentDescription="@string/feed_description" />

        <ImageButton
            android:id="@+id/settings_btn"
            android:layout_width="125dp"
            android:layout_height="48dp"
            android:src="@drawable/setting"
            android:scaleType="fitCenter"
            android:contentDescription="@string/settings_description"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>